<UserControl x:Class="Esri.ArcGISRuntime.Toolkit.Samples.TraceConfigurationsView.TraceConfigurationsViewSample"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Esri.ArcGISRuntime.Toolkit.Samples.TraceConfigurationsView"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             xmlns:controls="clr-namespace:Esri.ArcGISRuntime.Toolkit.UI.Controls;assembly=Esri.ArcGISRuntime.Toolkit"
             xmlns:mapping="clr-namespace:Esri.ArcGISRuntime.Mapping;assembly=Esri.ArcGISRuntime"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="250" />
        </Grid.ColumnDefinitions>
        <esri:SceneView x:Name="MySceneView" 
                        Grid.Column="0" Visibility="Hidden" />
        <esri:MapView x:Name="MyMapView" 
                      Grid.Column="0"/>
        <controls:TraceConfigurationsView x:Name="TraceConfigurationsViewControl"
                            Grid.Column="1"
                            GeoView="{Binding ElementName=MyMapView}" ZoomOnTrace="True"/>
    </Grid>
</UserControl>
